		"better-sqlite3": "^11.8.0",
		"dataloader": "^2.2.3",
		"date-fns": "^4.1.0",
		"drizzle-orm": "^0.40.0",
		"graphql": "^16.11.0",
		"graphql-scalars": "^1.24.2",
		"graphql-yoga": "^5.13.5"
